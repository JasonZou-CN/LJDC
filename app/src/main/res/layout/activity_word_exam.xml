<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.ljdc.activitys.WordExamActivity">

    <include layout="@layout/view_head_title"/>

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="5"
            android:layout_marginTop="-5dp"
            android:progress="3"
           >
    </ProgressBar>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_sound_selector"
            android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trade"
            android:id="@+id/word"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"/>

    <LinearLayout
            android:id="@+id/item_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:contextClickable="false"
            >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_green_light"
                    android:layout_weight="1"
                    android:id="@+id/layoutA">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="20dp"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="pron. 什么，多少；…的事物 adj.…的（事物或人）；"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:id="@+id/sectionA"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_right"
                    android:layout_weight="7"
                    android:id="@+id/iv_A"/>

        </LinearLayout> <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_phone_auth"
                    android:layout_weight="1"
                    android:id="@+id/layoutB">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textSize="20dp"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="adj.…的（事物或人）；"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/sectionB"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_wrong"
                    android:visibility="invisible"
                    android:layout_weight="7"
                    android:id="@+id/iv_B"/>

        </LinearLayout> <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_phone_auth"
                    android:layout_weight="1"
                    android:id="@+id/layoutC">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textSize="20dp"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pron. 什么，多少；…的事物"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/sectionC"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_C"
                    android:src="@drawable/ic_right"
                    android:visibility="invisible"
                    android:layout_weight="7"/>

        </LinearLayout> <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:id="@+id/layoutD">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:id="@+id/textView24"
                        android:textSize="20dp"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="adj.…的（事物或人）；"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/sectionD"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_wrong"
                    android:layout_weight="7"
                    android:id="@+id/iv_D"/>

        </LinearLayout>

    </LinearLayout>

    <Button
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="不认识"
            android:background="@drawable/bg_btn_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:id="@+id/pass"/>
</LinearLayout>
