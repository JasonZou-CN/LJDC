                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activitys.LoginActivity"
                android:label="登录"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activitys.RegisterByPhone"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activitys.RegisterByEmail"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activitys.RegisterConfirmPassword"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activitys.StudyWordActivity"
                android:screenOrientation="portrait"
